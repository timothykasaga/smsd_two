<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="#ff040404" android:padding="5.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText android:textColor="#fffefefe" android:id="@+id/edtdPname" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:textColor="#fffefefe" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="unit cost" android:layout_weight="1.0" />
        <TextView android:textSize="20.0sp" android:textColor="#fffefefe" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="units" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <EditText android:textColor="#fffefefe" android:id="@+id/edtUnitCost" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="1" android:layout_weight="1.0" android:inputType="number" />
        <EditText android:textColor="#fffefefe" android:id="@+id/edtUnits" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="1" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:textColor="#fffefefe" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Product id" android:layout_weight="1.0" />
        <EditText android:textSize="20.0sp" android:textColor="#fffefefe" android:id="@+id/edtPId" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20.0sp" android:textColor="#fffefefe" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Section" android:layout_weight="1.0" />
        <EditText android:textSize="20.0sp" android:textColor="#fffefefe" android:id="@+id/edtsection"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <Button android:textColor="#ff000000" android:id="@+id/btndCancel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1.0" />
        <Button android:textColor="#ff000000" android:id="@+id/btndSave" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Save" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>