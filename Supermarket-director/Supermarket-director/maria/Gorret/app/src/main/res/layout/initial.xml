<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0d293e"
    tools:context="com.victoria.timothykasaga.gorret.Initial">

    <LinearLayout android:gravity="center"
        android:orientation="vertical"
        android:padding="10.0sp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip">
            <TextView android:textSize="30.0sp"
                android:textColor="#fffffcfc"
                android:gravity="left" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:text="Our services" />
            <ListView android:id="@+id/listView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/services"
                android:layout_marginTop="10.0dip"
                android:dividerHeight="1.0dip" />
            <Button android:id="@+id/butadmin" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginTop="10.0dip"
                android:text="Administration login page" android:layout_below="@+id/listView" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
